<body>

<div class="player">
  <div class="header">
    <h2>Larnton Web Music Player</h2>
  </div>

  <!-- Current Song -->
  <div class="now-playing">
    <div class="title" id="title">Select a song</div>
    <div class="artist" id="artist">-</div>

    <div class="progress-area">
      <div class="progress-bar" id="progress-container">
        <div class="progress" id="progress"></div>
      </div>
      <div class="time">
        <span id="current-time">0:00</span>
        <span id="duration">0:00</span>
      </div>
    </div>

    <div class="controls">
      <button id="prev" title="Previous">‚èÆ</button>
      <button id="play-pause" title="Play / Pause">‚ñ∂</button>
      <button id="next" title="Next">‚è≠</button>
    </div>

    <div class="volume-area">
      üîä
      <input type="range" id="volume" min="0" max="1" step="0.01" value="0.5">
    </div>
  </div>

  <!-- Playlist -->
  <div class="playlist" id="playlist"></div>
</div>

<script>
  // Demo songs (royalty-free from Bensound)
  const songs = [
   {title:"Buddy",       artist:"Bensound", duration:"2:02", src:"https://www.bensound.com/bensound-music/bensound-buddy.mp3"},
    {title:"Sunny",       artist:"Bensound", duration:"2:20", src:"https://www.bensound.com/bensound-music/bensound-sunny.mp3"},
    {title:"Ukulele",     artist:"Bensound", duration:"2:26", src:"https://www.bensound.com/bensound-music/bensound-ukulele.mp3"}
  ];

  // Elements
  const audio = new Audio();
  let current = 0;
  const $ = id => document.getElementById(id);
  const playlistEl = $('playlist');
  const titleEl     = $('title');
  const artistEl    = $('artist');
  const playBtn     = $('play-pause');
  const prevBtn     = $('prev');
  const nextBtn     = $('next');
  const progressBar = $('progress');
  const progressContainer = $('progress-container');
  const currentTimeEl = $('current-time');
  const durationEl    = $('duration');
  const volumeSlider  = $('volume');

  // Render playlist
  function renderPlaylist(){
    playlistEl.innerHTML = '';
    songs.forEach((s,i)=>{
      const div = document.createElement('div');
      div.className = 'item' + (i===current ? ' active' : '');
      div.innerHTML = `
        <div>
          <div class="song-info">${s.title} ‚Äì ${s.artist}</div>
        </div>
        <div class="duration">${s.duration}</div>
      `;
      div.onclick = ()=>{current=i; loadSong(); playSong();};
      playlistEl.appendChild(div);
    });
  }

  // Load song
  function loadSong(){
    const song = songs[current];
    audio.src = song.src;
    titleEl.textContent = song.title;
    artistEl.textContent = song.artist;
    renderPlaylist();
  }

  // Play / Pause
  function playSong(){audio.play(); playBtn.innerHTML='‚è∏';}
  function pauseSong(){audio.pause(); playBtn.innerHTML='‚ñ∂';}
  function togglePlay(){audio.paused ? playSong() : pauseSong();}

  // Navigation
  function prevSong(){current=(current-1+songs.length)%songs.length; loadSong(); playSong();}
  function nextSong(){current=(current+1)%songs.length; loadSong(); playSong();}

  // Progress
  function updateProgress(){
    const percent = (audio.currentTime/audio.duration)*100 || 0;
    progressBar.style.width = percent + '%';
    currentTimeEl.textContent = formatTime(audio.currentTime);
  }
  function setProgress(e){
    const width = this.clientWidth;
    const clickX = e.offsetX;
    audio.currentTime = (clickX/width)*audio.duration;
  }
  function formatTime(sec){
    const m = Math.floor(sec/60);
    const s = Math.floor(sec%60);
    return `${m}:${s<10?'0':''}${s}`;
  }
  function updateDuration(){durationEl.textContent = formatTime(audio.duration);}

  // Events
  playBtn.onclick = togglePlay;
  prevBtn.onclick = prevSong;
  nextBtn.onclick = nextSong;
  progressContainer.onclick = setProgress;
  volumeSlider.oninput = ()=> audio.volume = volumeSlider.value;
  audio.ontimeupdate = updateProgress;
  audio.onloadedmetadata = updateDuration;
  audio.onended = nextSong;

  // Init
  loadSong();
  renderPlaylist();
</script>
</body>
</html>
