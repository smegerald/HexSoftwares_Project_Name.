    }
    .header{padding:20px;background:var(--accent);color:#fff;text-align:center}
    .now-playing{padding:20px;text-align:center}
    .now-playing .title{font-size:1.4rem;font-weight:600;margin-bottom:4px}
    .now-playing .artist{color:var(--subtle)}
    .progress-area{margin:16px 0}
